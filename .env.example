# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/smart_farm?schema=public"

# Auth.js v5
AUTH_SECRET="your-super-secret-key-here-generate-with-openssl-rand-base64-32"
AUTH_URL="http://localhost:3000"

# LINE Login (OAuth)
AUTH_LINE_ID="your-line-channel-id"
AUTH_LINE_SECRET="your-line-channel-secret"

# Google OAuth
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Facebook OAuth
AUTH_FACEBOOK_ID="your-facebook-app-id"
AUTH_FACEBOOK_SECRET="your-facebook-app-secret"

# LINE LIFF
NEXT_PUBLIC_LIFF_ID="your-liff-app-id"

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Google Maps API (if using Google Maps instead of Leaflet)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
